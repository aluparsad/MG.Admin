<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.buns.mgadmin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:name=".Application.App"
        android:roundIcon="@mipmap/launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fire">
        <activity android:name=".Activities.HomeActivity.HomeActivity"/>
        <activity android:name=".Activities.SplashActivity.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.UserDetails.UserDetailActivity" />

        <service android:name=".Utils.CustomService"/>
    </application>



</manifest>